<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
  
  <ul>
    <% current_user.tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
  </ul>
  
  <%= link_to '新規タスクの作成',new_task_path %>
  <%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %>


<% else %>
<%# redirect_to login_url %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasklists</h1>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Sign up', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
